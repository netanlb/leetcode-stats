{
  "compilerOptions": {
    "target": "ES2022",                    // Specify ECMAScript target version
    "module": "CommonJS",                 // Module system for Node.js
    "rootDir": "./",                      // Source directory
    "outDir": "./dist",                   // Output directory for compiled files
    "esModuleInterop": true,              // Allow ES6 imports
    "strict": true,                       // Enable strict type checking
    "skipLibCheck": true                  // Skip library type checks
  },
  "include": ["**/*.ts"],                 // Include all .ts files
  "exclude": ["node_modules", "dist"]    // Exclude node_modules and dist folder
}
